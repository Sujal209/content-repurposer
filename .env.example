# RepurposeMate Environment Configuration

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# OpenRouter API Configuration (Recommended - Cost Effective)
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key-here

# OpenAI API Configuration (Legacy - More Expensive)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Daily Usage Limits by Plan
NEXT_PUBLIC_FREE_DAILY_LIMIT=3
NEXT_PUBLIC_PRO_DAILY_LIMIT=200
NEXT_PUBLIC_ENTERPRISE_DAILY_LIMIT=2000

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security Configuration
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate limiting settings
RATE_LIMIT_API_MAX=100
RATE_LIMIT_API_WINDOW=900000
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_AUTH_WINDOW=900000

# Session settings
SESSION_MAX_AGE=86400
SESSION_REFRESH_THRESHOLD=3600

# Optional: Analytics and Monitoring
NEXT_PUBLIC_GA_ID=your_google_analytics_id
# SENTRY_DSN=your-sentry-dsn
